.error {
    align-items: center;
    display: flex;
    flex-flow: column nowrap;
    gap: 4rem;
    justify-content: center;
    padding: 5rem;
}

.error h1 {
    font-size: 7.2rem;
    font-weight: 600;
}


.error p {
    font-size: 1.6rem;
    font-weight: 300;
}


.error i {
    font-size: 2.4rem;
    font-style: italic;
    font-weight: 400;
}
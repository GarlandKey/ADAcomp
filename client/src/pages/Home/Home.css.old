.home {
   align-items: center;
   display: flex;
   flex-flow: column nowrap;
   justify-content: center;
   height: calc(100vh - (100vh - 100%));
   width: calc(100vw - (100vw - 100%));
}

.home img.logo {
   height: fit-content;
   max-width: 95vw;
   width: 70rem;
}


.home .googleplay,
.home .appstore {
   -webkit-filter: grayscale(100%);
   filter: grayscale(100%);
   width: 20rem;
}


.home h1 {
   color: black;
   font-size: 1.8rem;
   font-weight: 300;
   line-height: 3rem;
   max-width: 99vw;
   margin: 0;
   padding: 4rem 2rem;
   text-align: left;
   width: 70rem; height: fit-content;
}


.home h2 {
   color: black;
   font-size: 2.6rem;
   font-weight: 600;
   margin:0;
   padding: 0;
}


.home header,
.home section {
   align-items: center;
   display: flex;
   flex-flow: column nowrap;
   justify-content: center;
}


.home header {
   background: white;
   gap: 3rem;
   padding: 6rem 0;
}


.home section {
   gap: 3rem;
}


.home ul {
   align-items: center;
   display: flex;
   flex-flow: row wrap;
   gap: 2rem;
   justify-content: center;
   list-style: none;
   max-width: 50rem;
   margin: 0;
   padding: 2rem;
}


@media screen and (max-width: 700px) {
  .home h1 {
    font-size: 1.6rem;
    line-height: 2.8rem;
    width: fit-content;
  }


  .home h2 {
    font-size: 2.2rem;
  }
}
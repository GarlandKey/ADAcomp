.PointNav aside {
  align-items: flex-start;
  background: #282C34;
  border-radius: 0.8rem;
  display: flex;
  height: fit-content;
  flex-flow: column nowrap;
  gap: 2rem;
  justify-content: center;
  padding: 2rem;
  text-align: left;
  width: 30rem;
}


.PointNav nav {
  align-items: center;
  display: flex;
  height: fit-content;
  flex-flow: row nowrap;
  justify-content: space-between;
  width: 100%;
}


.PointNav h2 {
  color: white;
  font-size: 2.6rem;
  font-weight: 600;
  margin:0;
}


.PointNav nav > ul {
  align-items: center;
  display: flex;
  flex-flow: row nowrap;
  gap: 2rem;
  justify-content: center;
}


.PointNav .prev {
  border: 0;
  background: transparent url("./img/arrow-left.webp");
  width: 3.2rem; height: 3.2rem;
}


.PointNav .next {
  border: 0;
  background: transparent url("./img/arrow-right.webp");
  width: 3.2rem; height: 3.2rem;
}


.PointNav h3 {
  color: white;
  font-size: 2rem;
  font-weight: 500;
  margin:0;
  padding-bottom: 2rem;
}


.PointNav section > ul {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  width: 28rem;
}


.PointNav li.listItem {
  color: white;
  font-size: 1.6rem;
  height: 3.5rem;
  padding: 1rem 0;
}


.PointNav li.listItem:hover {
  background: #3d424e;
  margin-left: -2rem;
  padding: 1rem 0;
  padding-left: 2rem;
}